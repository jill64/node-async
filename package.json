{
  "name": "@jill64/node-async",
  "description": "⚖️ Promisified node utilities",
  "version": "0.0.50",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "!**/*.test.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./fs": {
      "types": "./dist/fs.d.ts",
      "default": "./dist/fs.js"
    }
  },
  "scripts": {
    "build": "tsc && npx publint",
    "prepack": "npm run build",
    "test": "vitest",
    "lint": "npx eslint . && npx depcheck",
    "format": "npx prettier -w ."
  },
  "prettier": "@jill64/prettier-config",
  "devDependencies": {
    "@jill64/eslint-config-ts": "1.1.44",
    "@jill64/prettier-config": "1.0.0",
    "typescript": "5.6.3",
    "vitest": "2.1.2"
  },
  "dependencies": {
    "@types/node": "20.16.11"
  },
  "homepage": "https://github.com/jill64/node-async#readme",
  "license": "MIT",
  "bugs": "https://github.com/jill64/node-async/issues",
  "author": {
    "name": "jill64",
    "email": "contact@jill64.dev",
    "url": "https://github.com/jill64",
    "image": "https://avatars.githubusercontent.com/u/143883742?v=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jill64/node-async.git",
    "image": "https://opengraph.githubassets.com/768d64071f381ac662e2ff762ba6c43082dc0f06eb0f7877136d830e2a4b3fdc/jill64/node-async"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "node",
    "promisify",
    "utility"
  ]
}
